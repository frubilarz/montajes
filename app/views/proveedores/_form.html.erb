<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@proveedor,url: proveed_path, :html => { :role => "form" }) do |f| %>
          <% if @proveedor.errors.any? %>
              <div class="alert alert-danger alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                <h4><%= pluralize(@proveedor.errors.count, "error") %> prohibido guardar este proveedor: </h4>

                <ul>
                  <% @proveedor.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>


          <div class="form-group">
            <%= f.label :nombre  %>
            <%= f.text_field :nombre, :class => "form-control" , :required => true%>
          </div>


          <div class="form-group">
            <%= f.submit :class => "btn btn-primary" %>
          </div>

      <% end %>
    </div>
  </div>
</section>
