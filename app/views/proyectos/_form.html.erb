<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@proyecto, :html => { :role => "form" }) do |f| %>
          <% if @proyecto.errors.any? %>
              <div class="alert alert-danger alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                <h4><%= pluralize(@proyecto.errors.count, "error") %> prohibido guardar este proyecto: </h4>

                <ul>
                  <% @paciente.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group">
            <%= f.label :fecha_inicio %>
            <%= f.date_field :fecha_inicio, prefix: :start_date,  :order => [:day, :month, :year] , :required => true %>
          </div>
          <div class="form-group">
            <%= f.label :fecha_final %>
            <%= f.date_field :fecha_final, prefix: :start_date,:order => [:day, :month, :year]  %>
          </div>
          <div class="form-group">
            <%= f.label :direccion  %>
            <%= f.text_field :direccion, :class => "form-control" , :required => true%>
          </div>
          <div class="field">
            <%= f.label :comuna %>
            <%= f.select('comuna_id', Comuna.all.collect{|c| [c.nombre, c.id]}, class: 'chosen-select')%>
          </div>
          <div class="form-group">
            <%= f.label :mandante  %>
            <%= f.text_field :mandante, :class => "form-control" %>
          </div>
          <div class="field">
            <%= f.label :estado_proyecto %>
            <%= f.select('estado_proyecto_id', EstadoProyecto.all.collect{|c| [c.nombre, c.id]}) %>
          </div>
          <div class="form-group">
            <%= f.label :descripcion  %>
            <%= f.text_area :descripcion, :class => "form-control", :required => true %>
          </div>

          <div class="form-group">
            <%= f.submit :class => "btn btn-primary" %>
          </div>

      <% end %>
    </div>
  </div>
</section>
