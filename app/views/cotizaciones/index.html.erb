<% content_for :content_header  do %>
    <section class="content-header">
      <h1>Cotizacionees</h1>
      <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Crear Cotizacion',nuevo_cotizacion_path %></span>

    </section>
<% end %>

<section class="content invoice">
  <table class="table">
    <thead>
    <tr>
  <th>Correo</th>
  <th>Fecha</th>
  <th>Nombre</th>
  <th>Cotizacion</th>
    </tr>
    </thead>
    <tbody>
    <% @cotizaciones.each do |cotizacion|%>
        <tr>
          <td><%= cotizacion.email %></td>
          <td><%= cotizacion.fecha.to_s %></td>
          <td><%= cotizacion.nombre_completo %></td>
          <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', cotizacion %> </td>
          <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',editar_cotizacion_path(Cotizacion) %></td>
          <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar',cotizacion , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
        </tr>
    <%end%>
    </tbody>
  </table>
  <%= will_paginate @cotizaciones, renderer: BootstrapPagination::Rails %>
</section>
