<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
        <%= form_for(@cotizacion, :html => { :role => "form" }) do |f| %>
          <% if @cotizacion.errors.any? %>
              <div class="alert alert-danger alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                <h4><%= pluralize(@cotizacion.errors.count, "error") %> prohibido guardar esta Cotizacion: </h4>

                <ul>
                  <% @cotizacion.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group">
            <div class="form-group">
              <%= f.label :correo %><br>
              <%= f.text_field :correo, :class => "form-control" , :required => true%>
            </div>
            <div class="form-group">
              <%= f.label :fecha  %>
              <%= f.text_area :fecha, :class => "form-control", :required => true %>
            </div>
            <div class="form-group">
              <%= f.label :nombre  %>
              <%= f.text_area :nombre, :class => "form-control", :required => true %>
            </div>
            <div class="form-group">
              <%= f.label :cotizacion  %>
              <%= f.text_area :cotizacion, :class => "form-control", :required => true %>
            </div>

          <div class="form-group">
            <%= f.submit :class => "btn btn-primary" %>
          </div>

      <% end %>
    </div>
  </div>
</section>
