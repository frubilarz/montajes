<% content_for :content_header  do %>
    <section class="content-header">
      <h1>Contacto</h1>
    </section>
<% end %>

<section class="content invoice">
  <table class="table">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>email</th>
      <th>Estado</th>
      <th>Mostrar</th>
      <th>Editar</th>
<!--      <th>Eliminar</th> -->
    </tr>
    </thead>
    <tbody>
    <% @contactos.each do |contacto|%>
        <tr>
          <td><%= contacto.nombre + " " + contacto.apellido%> </td>
          <td><%= contacto.email %></td>
          <% if contacto.estado == true %>
              <td ><span  class="label label-primary">Respondido</span></td>
          <% else%>
              <td ><span  class="label label-primary">No Responido</span></td>
          <%end%>
          <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar',contacto %> </td>
          <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',editar_contacto_path(contacto) %></td>
<!--          <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar',contacto , method: :delete, data: {confirm: 'Esta seguro?'} %> </td> -->
        </tr>
    <%end%>
    </tbody>
  </table>
  <%= will_paginate @contactos, renderer: BootstrapPagination::Rails %>
</section>