<% content_for :content_header  do %>
    <section class="content-header">
      <h1>Galeria</h1>

      <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><%= link_to "Galerias", galerias_path %></li>
        <li class="active">Mostrar</li>
      </ol>
    </section>
<% end %>

<section class="content invoice">

  <p>
  <%= image_tag @galeria.avatar.url(:thumb) %>
  </p>
  <p>
    <strong>Descripcion:</strong>
    <%= @galeria.descripcion %>
  </p>

  <%= link_to 'Editar', editar_galeria_url,:class =>"btn btn-success" %>
  <%= link_to 'Atras', galerias_url,:class =>"btn btn-info" %>
</section>
