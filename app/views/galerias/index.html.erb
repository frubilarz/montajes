
<% content_for :content_header  do %>
    <section class="content-header">
      <h1>Galeria de imagenes</h1>
      <span class="tn btn-success btn-lg bt pull-right glyphicon glyphicon-plus"><%= link_to 'Agregar Imagen',nuevo_galeria_path %></span>

    </section>
<% end %>

<section class="content invoice">
  <table class="table">
    <thead>
    <tr>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <% @galerias.each do |galeria|%>
        <tr>
          <td><%= image_tag galeria.avatar.url(:medium) %><td>
          <td><%= galeria.descripcion %></td>
          <td><span class="glyphicon glyphicon-play" aria-hidden="true" ></span><%= link_to 'Mostrar', galeria %> </td>
          <td><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><%= link_to 'Editar',editar_galeria_path(galeria) %></td>
          <td><span class="glyphicon glyphicon-trash" aria-hidden="true"></span><%= link_to'Eliminar',galeria , method: :delete, data: {confirm: 'Esta seguro?'} %> </td>
        </tr>
    <%end%>
    </tbody>
  </table>
  <%= will_paginate @clientes, renderer: BootstrapPagination::Rails %>
</section>
