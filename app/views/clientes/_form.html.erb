<section class="content invoice">
  <div class="row">
    <div class="col-md-10">
      <%= form_for(@cliente, :html => { :role => "form" }) do |f| %>
          <% if @cliente.errors.any? %>
              <div class="alert alert-danger alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                <h4><%= pluralize(@cliente.errors.count, "error") %> prohibido guardar este Cliente: </h4>

                <ul>
                  <% @cliente.errors.full_messages.each do |msg| %>
                      <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group">
            <%= f.label :nombre  %>
            <%= f.text_field :nombre, :class => "form-control" , :required => true%>
          </div>
          <div class="form-group">
            <%= f.label :descripcion  %>
            <%= f.text_area :descripcion, :class => "form-control", :required => true %>
          </div>

          <div class="form-group">
            <%= f.submit :class => "btn btn-primary" %>
          </div>

      <% end %>
    </div>
  </div>
</section>
